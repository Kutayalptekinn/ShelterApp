                                        <Template>
                                            <button class="btn btn-success" @onclick="() => EditItem(context as ListProductDto)"><i class="fa fa-pen"></i></button>
                                            <button class="btn btn-danger" @onclick="() => DeleteItem(context as ListProductDto)"><i class="fa fa-trash"></i></button>
                                        </Template>
                                    </GridColumn>

                                </GridColumns>
                            </SfGrid>
                        </CardContent>
                        <CardFooter>
                        </CardFooter>
                    </SfCard>
                </Template>
            </DxGridLayoutItem>
        </GridLayoutItems>
    </DevGridLayout>

