                                <div class="file-input-zone">
                                    <InputFile OnChange="UploadFiles3" />
                                </div>
                                @if (photoVisible3)
                                {
                                    <div id="loading" class="loading">Loading...</div>
                                }

                            }
                        </Template>
                    </DxGridLayoutItem>
                      <DxGridLayoutItem Row="2" Column="3">
